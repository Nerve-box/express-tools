{
    "name": "@express-tools/mcp",
    "version": "0.0.1",
    "description": "MCP plugin for express",
    "license": "Apache-2.0",
    "main": "bin/index.js",
    "keywords": [
        "express",
        "model",
        "api",
        "ai",
        "protocol",
        "plugin",
        "mcp",
        "documentation",
        "definition",
        "schema"
    ],
    "files": [
        "bin",
        "types.d.ts"
    ],
    "dependencies": {
        "json-rpc-2.0": "^1.7.0"
    },
    "devDependencies": {
        "express": "^5.1.0",
        "undici": "^7.16.0"
    },
    "typings": "types.d.ts",
    "scripts": {
        "build": "rm -rf ./bin && mkdir ./bin && tsc --project ./tsconfig.json",
        "test:unit": "jest src/*",
        "test:integration": "jest tests/*",
        "test": "npm run test:unit && npm run test:integration",
        "prepublishOnly": "npm run build && cp ../../LICENSE ./LICENSE"
    },
    "homepage": "https://github.com/nerve-box/express-tools",
    "contributors": [
        "frederic charette <fredericcharette@gmail.com>"
    ],
    "bugs": {
        "url": "https://github.com/nerve-box/express-tools/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/nerve-box/express-tools.git",
        "directory": "packages/mcp"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "transform": {
            "^.+\\.m?[tj]sx?$": [
                "ts-jest",
                {
                    "diagnostics": false
                }
            ]
        }
    }
}
