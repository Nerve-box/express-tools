{
    "name": "@express-tools/oas",
    "version": "0.0.2",
    "description": "OpenAPI plugin for express",
    "license": "Apache-2.0",
    "main": "bin/index.js",
    "keywords": [
        "express",
        "open",
        "api",
        "openapi",
        "standard",
        "plugin",
        "validation",
        "documentation",
        "definition",
        "schema"
    ],
    "engines": {
      "node": ">=24"
    },
    "files": [
        "bin",
        "types.d.ts"
    ],
    "dependencies": {
        "swagger-route-validator": "^3.1.0"
    },
    "devDependencies": {
        "express": "^5.2.0"
    },
    "typings": "types.d.ts",
    "scripts": {
        "build": "rm -rf ./bin && mkdir ./bin && tsc --project ./tsconfig.json",
        "test:unit": "node --test src/*.test.ts",
        "test:integration": "node --test tests/integration/*.test.ts",
        "test": "npm run test:unit && npm run test:integration",
        "prepublishOnly": "npm run build && cp ../../LICENSE ./LICENSE"
    },
    "homepage": "https://github.com/nerve-box/express-tools",
    "contributors": [
        "frederic charette <fredericcharette@gmail.com>"
    ],
    "bugs": {
        "url": "https://github.com/nerve-box/express-tools/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/nerve-box/express-tools.git",
        "directory": "packages/oas"
    }
