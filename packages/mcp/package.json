{
    "name": "@express-tools/mcp",
    "version": "0.0.3",
    "description": "MCP plugin for express",
    "license": "Apache-2.0",
    "main": "bin/index.js",
    "keywords": [
        "express",
        "model",
        "api",
        "ai",
        "protocol",
        "plugin",
        "mcp",
        "documentation",
        "definition",
        "schema"
    ],
    "engines": {
      "node": ">=24"
    },
    "files": [
        "bin",
        "types.d.ts"
    ],
    "dependencies": {
        "json-rpc-2.0": "^1.7.0"
    },
    "devDependencies": {
        "express": "^5.2.0"
    },
    "typings": "types.d.ts",
    "scripts": {
        "build": "rm -rf ./bin && mkdir ./bin && tsc --project ./tsconfig.json && find ./bin -name '*.js' -exec sed -i \"s/\\.ts'/\\.js'/g; s/\\.ts\\\"/\\.js\\\"/g\" {} \\;",
        "test:unit": "node --test src/*.test.ts",
        "test:integration": "node --test tests/integration/*.test.ts",
        "test": "npm run test:unit && npm run test:integration",
        "prepublishOnly": "npm run build && cp ../../LICENSE ./LICENSE"
    },
    "homepage": "https://github.com/nerve-box/express-tools",
    "contributors": [
        "frederic charette <fredericcharette@gmail.com>"
    ],
    "bugs": {
        "url": "https://github.com/nerve-box/express-tools/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/nerve-box/express-tools.git",
        "directory": "packages/mcp"
    }
}
